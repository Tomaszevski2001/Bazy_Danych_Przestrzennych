--zad.1

SELECT ST_Area(
(SELECT ST_Buffer(
(SELECT ST_ShortestLine(
(SELECT geom FROM obiekty WHERE name = 'obektunr3'),
(SELECT geom FROM obiekty WHERE name = 'obektunr4'))), 5)))


--zad.2
INSERT INTO obiekty(id, name, geom)  VALUES
(7, 'obiektunr4_poligon',
ST_MakePolygon( ST_AddPoint((SELECT geom FROM obiekty WHERE name = 'obiektunr4'),
ST_StartPoint((SELECT geom FROM obiekty WHERE name = 'obiektunr4')))));
	
--zad.3
INSERT INTO obiekty(id, name, geom)  VALUES
(8, 'obiektunr7', ST_Collect((SELECT geom FROM obiekty WHERE name = 'obiekunrt3'), 
(SELECT geom FROM obiekty WHERE name = 'obiektunr4')));
						
--zad.4
SELECT ST_Area(ST_Buffer(geom, 5))
	FROM obiekty
	WHERE NOT ST_HasArc(geom)
	








