CREATE EXTENSION postgis;
CREATE TABLE obiekty (id INT PRIMARY KEY, name VARCHAR(30), geom GEOMETRY);

-- obektunr1
INSERT INTO obiekty(id, name, geom)  VALUES
(1, 'obiekt_numer_1', ST_GeomFromText('MULTICURVE( (0 1, 1 1),
CIRCULARSTRING(1 1, 2 0, 3 1), CIRCULARSTRING(3 1, 4 2, 5 1), (5 1, 6 1))'));

-- obektunr2
INSERT INTO obiekty(id, name, geom)  VALUES
	(2, 'obiektunr2', ST_GeomFromText('CURVEPOLYGON(COMPOUNDCURVE(CIRCULARSTRING(14 6, 16 4, 14 2),
	CIRCULARSTRING(14 2, 12 0, 10 2), (10 2, 10 6, 14 6)), CIRCULARSTRING(11 2, 13 2, 11 2))'));

